<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= render 'cocktails/cocktail_card', cocktail: @cocktail %>
      <div class="text-center">
        <%= link_to 'Add a dose for this cocktail', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
        <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
      </div>
      <ol class = "list-unstyled">

        <% @cocktail.doses.each do |dose| %>
        <li>
          <%=dose.description %>
          <%= dose.ingredient.name %>
        </li>
        <% end %>
      </ol>

    </div>
  </div>
</div>
