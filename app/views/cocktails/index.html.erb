<body id="homepage">
  <h2 class="text-center">Welcome to Sazerac Ultimate Cocktail Guide ! </h2>


  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="small_card" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1455621481073-d5bc1c40e3cb?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&s=8da45f0fbede6fba674674a857e3b7d9'); background-size: cover">
            <div class="text-center" class="card-description">
              <h4><%= cocktail.name %></h4>

            </div>
            <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
          </div>
        </div>
      <%end%>
    </div>
  </div>

</body>
