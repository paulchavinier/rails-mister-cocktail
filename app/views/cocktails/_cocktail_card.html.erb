<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.2)), url(<%= @cocktail.photo %>); background-size: cover">
  <div class="card-description">
    <h2><%= cocktail.name %></h2>
    <p>
      <ol class = "list-unstyled">
        <% @cocktail.doses.each do |dose| %>
        <li>
          <%=dose.description %>
          <%= dose.ingredient.name %>
        </li>
        <% end %>
      </ol>
    </p>
  </div>
  <img class="card-user avatar" src="http://placehold.it/50x50">
  <%= link_to "", cocktail_path(cocktail), class: "card-link" %>
</div>
